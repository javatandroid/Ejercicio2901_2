<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ejercicio2901_2.MainActivity">

    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFacebook"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/facebook"
            android:onClick="clickFacebook"/>

        <TextView
            android:id="@+id/tvFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            />

        <ImageView
            android:id="@+id/ivTwitter"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/twitter"
            android:onClick="clickTwitter"/>

        <TextView
            android:id="@+id/tvTwitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            />

        <ImageView
            android:id="@+id/ivYoutube"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:onClick="clickYoutube"
            app:srcCompat="@drawable/youtube" />

        <TextView
            android:id="@+id/tvYoutube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            />

        <ImageView
            android:id="@+id/ivbin"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:onClick="limpiarBotones"
            app:srcCompat="@mipmap/ic_trash" />

    </LinearLayout>
</LinearLayout>
